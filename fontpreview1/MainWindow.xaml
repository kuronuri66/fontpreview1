<Window x:Class="FontPreviewApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Font Previewer" Height="450" Width="800" Background="#1f1f1f" FontFamily="Noto Sans JP">
    <Window.Resources>
        <ContextMenu 
            x:Key="myButtonContextMenu"
            Background="#1a1a1a" 
            Foreground="#FFFFFF">
            <MenuItem Header="フォント名をコピー" Click="Copyfontname" Background="#1a1a1a" BorderThickness="0"/>
            <MenuItem Header="フォントの完全名をコピー" Click="Copyfont" Background="#1a1a1a" BorderThickness="0"/>
        </ContextMenu>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#1f1f1f"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#1a1a1a">
            <TextBlock Text="検索" Foreground="#FFFFFF"/>
            <TextBox 
                x:Name="SearchTextBox" 
                Width="125" 
                Margin="0,0,10,0" 
                Background="#1f1f1f" 
                Foreground="#FFFFFF" 
                TextChanged="Search_TextChanged"
                />
            <TextBlock Text="preview" Foreground="#FFFFFF"/>
            <TextBox 
                x:Name="PreviewTextBox" 
                Width="125" 
                Margin="0,0,10,0" 
                Background="#1f1f1f" 
                Foreground="#FFFFFF" 
                KeyUp="PreviewChanged"
                />

            <CheckBox x:Name="JPCheckBox"
                Content="日本語フォント"
                Foreground="#FFFFFF"
                Checked="JPClick"
                Unchecked="JPClick"/>
            
        </StackPanel>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="fontGrid" Grid.ColumnSpan="2">
                    
                </StackPanel>
            </ScrollViewer>

            <GridSplitter Grid.Column="1"
                Background="#1a1a1a"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ResizeBehavior="PreviousAndNext"
                ResizeDirection="Columns"
                ShowsPreview="True"/>

            <Grid Grid.Column="2" Height="Auto">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                            <StackPanel>
                                <TextBlock 
                                    x:Name="ClickFontName"
                                    Text="sample"
                                    FontSize="48"
                                    Foreground="#FFFFFF">
                                </TextBlock>
                                <TextBlock Text="sample"
                                    x:Name="ClickFont"
                                    FontSize="24"
                                    Foreground="#FFFFFF">       
                                </TextBlock>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="preview"
                                         Foreground="#FFFFFF">
                                    </TextBlock>
                                    <ComboBox x:Name="myComboBox"
                                        Width="150"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Margin="10"
                                        SelectionChanged="MyComboBox_SelectionChanged"
                                        Background="#1a1a1a" 
                                        Foreground="#000000" 
        />
                                </StackPanel>
                            </StackPanel>
                    
                </StackPanel>

                <TextBox 
                    x:Name="PreviewTextArea"
                    AcceptsReturn="True" 
                    Height="Auto" 
                    Width="Auto" 
                    TextWrapping="Wrap" 
                    VerticalScrollBarVisibility="Auto"
                    VerticalAlignment="Stretch"
                    Grid.Row="1"
                    Background="#1a1a1a" 
                    Foreground="#FFFFFF" 
                    FontSize="30"
                    Text="The quick brown fox jumps over the lazy dog.&#x0d;&#x0a;古池や蛙飛び込む水の音&#x0d;&#x0a;サラダ記念日&#x0d;&#x0a;0123456789">
                </TextBox>
            </Grid>
        </Grid>
    </Grid>
</Window>