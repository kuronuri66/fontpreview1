<Window x:Class="FontPreviewApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Font Previewer" Height="450" Width="800" Background="#1f1f1f" FontFamily="Noto Sans JP">
    <Window.Resources>
        <ContextMenu 
            x:Key="myButtonContextMenu"
            Background="#1a1a1a" 
            Foreground="#FFFFFF">
            <MenuItem Header="フォント名をコピー" Click="Copyfontname" Background="#1a1a1a" BorderThickness="0"/>
            <MenuItem Header="フォントの完全名をコピー" Click="Copyfont" Background="#1a1a1a" BorderThickness="0"/>
        </ContextMenu>

        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <TextBlock Text="検索" Foreground="#FFFFFF"/>
            <TextBox 
                x:Name="SearchTextBox" 
                Width="200" 
                Margin="0,0,10,0" 
                Background="#1f1f1f" 
                Foreground="#FFFFFF" 
                TextChanged="Search_TextChanged"
                />
            <TextBlock Text="preview" Foreground="#FFFFFF"/>
            <TextBox 
                x:Name="PreviewTextBox" 
                Width="200" 
                Margin="0,0,10,0" 
                Background="#1f1f1f" 
                Foreground="#FFFFFF" 
                KeyUp="PreviewChanged"
                />

            <CheckBox x:Name="JPCheckBox"
                Content="日本語対応フォント"
                Foreground="#FFFFFF"
                Checked="JPClick"
                Unchecked="JPClick"/>
            
        </StackPanel>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="fontGrid" Grid.ColumnSpan="2">
                    
                </StackPanel>
            </ScrollViewer>
            <Grid Grid.Column="1" Height="Auto">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" >
                    <TextBlock 
                        x:Name="ClickFontName"
                        Text="sample"
                        FontSize="48"
                        Foreground="#FFFFFF">
                    </TextBlock>
                    <TextBlock Text="sample"
                        x:Name="ClickFont"
                        FontSize="24"
                        Foreground="#FFFFFF">
                    </TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="preview"
                            Foreground="#FFFFFF">
                        </TextBlock>
                        <ComboBox x:Name="myComboBox"
                            Width="150"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10"
                            SelectionChanged="MyComboBox_SelectionChanged"
                            Background="#1a1a1a" 
                            Foreground="#000000" 
                            />
                    </StackPanel>
                </StackPanel>

                <TextBox 
                    x:Name="PreviewTextArea"
                    AcceptsReturn="True" 
                    Height="Auto" 
                    Width="Auto" 
                    TextWrapping="Wrap" 
                    VerticalScrollBarVisibility="Auto"
                    VerticalAlignment="Stretch"
                    Grid.Row="1"
                    Background="#1a1a1a" 
                    Foreground="#FFFFFF" 
                    FontSize="24"
                    Text="ここで試せる">
                </TextBox>
            </Grid>
        </Grid>
    </Grid>
</Window>